<!DOCTYPE html>
<html
        lang="en"
        class="light-style layout-menu-fixed"
        dir="ltr"
        data-theme="theme-default"
        data-assets-path="/assets/"
        data-template="vertical-menu-template-free"
>
<head>
    <meta charset="utf-8"/>
    <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0"
    />

    <title>Ví điện tử 2022</title>

    <meta name="description" content=""/>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/assets/img/favicon/favicon.ico"/>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link
            href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
            rel="stylesheet"
    />

    <!-- Icons. Uncomment required icon fonts -->
    <link rel="stylesheet" href="/assets/vendor/fonts/boxicons.css"/>

    <!-- Core CSS -->
    <link rel="stylesheet" href="/assets/vendor/css/core.css" class="template-customizer-core-css"/>
    <link rel="stylesheet" href="/assets/vendor/css/theme-default.css" class="template-customizer-theme-css"/>
    <link rel="stylesheet" href="/css/style.css"/>

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css"/>

    <!-- Page CSS -->

    <!-- Helpers -->
    <script src="/assets/vendor/js/helpers.js"></script>

    <script src="/assets/js/config.js"></script>
</head>

<body>
<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
        <!-- Menu -->

        <%- include('../commons/sidebar') %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
            <!-- Navbar -->

            <%- include('../commons/navbar') %>

            <!-- / Navbar -->

            <!-- Content wrapper -->
            <div class="content-wrapper">
                <!-- Content -->

                <div class="container-xxl flex-grow-1 container-p-y">
                    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Account /</span> Chi tiết</h4>

                    <div class="row">
                        <div class="col-md-12 col-lg-6">
                            <div class="card mb-4">
                                <h5 class="card-header">Trạng thái tài khoản</h5>
                                <!-- Account -->
                                <div class="card-body">
                                    <div class="d-flex align-items-start align-items-sm-center gap-4">
                                        <% if(userDetail.active == 0) { %>
                                            <span class="badge bg-warning">Đã vô hiệu hoá</span>
                                        <% } else { %>
                                            <% if(userDetail.status == 2) { %>
                                                <small class="text-muted">
                                                    <span class="badge bg-success">Đã xác minh</span>
                                                </small>
                                            <% } else if(userDetail.status == 3) { %>
                                                <small class="text-muted">
                                                    <span class="badge bg-info">Chờ cập nhật</span>
                                                </small>
                                            <% } else  { %>
                                                <small class="text-muted">
                                                    <span class="badge bg-danger">Chờ xác minh</span>
                                                </small>
                                            <% } %>
                                        <% } %>
                                    </div>
                                </div>
                                <!-- Account -->

                                <hr class="my-0"/>
                                <div class="card-body">
                                    <form id="formAccountSettings" method="POST" onsubmit="return false">
                                        <div class="row">
                                            <div class="mb-3 col-md-6">
                                                <label for="state" class="form-label">Username</label>
                                                <input class="form-control" type="text" id="state" name="state"
                                                       placeholder="California" value="<%= userDetail.user_name %>"
                                                       disabled/>
                                            </div>
                                            <div class="mb-3 col-md-6">
                                                <label for="firstName" class="form-label">Họ tên</label>
                                                <input
                                                        class="form-control"
                                                        type="text"
                                                        id="firstName"
                                                        name="firstName"
                                                        value="<%= userDetail.full_name %>"
                                                        disabled
                                                        autofocus
                                                />
                                            </div>
                                            <!--                                            <div class="mb-3 col-md-6">-->
                                            <!--                                                <label for="lastName" class="form-label">Last Name</label>-->
                                            <!--                                                <input class="form-control" type="text" name="lastName" id="lastName" value="Doe" />-->
                                            <!--                                            </div>-->
                                            <div class="mb-3 col-md-6">
                                                <label for="email" class="form-label">E-mail</label>
                                                <input
                                                        class="form-control"
                                                        type="text"
                                                        id="email"
                                                        name="email"
                                                        value="<%= userDetail.email %>"
                                                        disabled
                                                        placeholder="john.doe@example.com"
                                                />
                                            </div>
                                            <div class="mb-3 col-md-6">
                                                <label for="organization" class="form-label">Ngày sinh</label>
                                                <input
                                                        type="text"
                                                        class="form-control"
                                                        id="organization"
                                                        name="organization"
                                                        value="<%= userDetail.date_of_birth %>"
                                                        disabled
                                                />
                                            </div>
                                            <div class="mb-3 col-md-6">
                                                <label class="form-label" for="phoneNumber">Phone Number</label>
                                                <div class="input-group input-group-merge">
                                                    <!--                                                    <span class="input-group-text">VN (+84)</span>-->
                                                    <input
                                                            type="text"
                                                            id="phoneNumber"
                                                            name="phoneNumber"
                                                            class="form-control"
                                                            value="<%= userDetail.phone_number %>"
                                                            placeholder="202 555 0111"
                                                            disabled
                                                    />
                                                </div>
                                            </div>
                                            <div class="mb-3 col-md-6">
                                                <label for="address" class="form-label">Address</label>
                                                <input type="text" class="form-control" id="address" name="address"
                                                       value="<%= userDetail.address %>" placeholder="Address"
                                                       disabled/>
                                            </div>
                                            <div class="mb-3 col-md-6">
                                                <label for="mat_truoc" class="form-label">Ảnh CCCD (mặt trước)</label>
                                                <img class="img-thumbnail"  id="mat_truoc" src="/assets/images/<%= userDetail.above_image %>">
                                            </div>
                                            <div class="mb-3 col-md-6">
                                                <label for="address" class="form-label">Ảnh CCCD (mặt sau)</label>
                                                <img class="img-thumbnail" id="address" src="/assets/images/<%= userDetail.behind_image %>">
                                            </div>
                                            <!--                                            <div class="mb-3 col-md-6">-->
                                            <!--                                                <label for="zipCode" class="form-label">Zip Code</label>-->
                                            <!--                                                <input-->
                                            <!--                                                        type="text"-->
                                            <!--                                                        class="form-control"-->
                                            <!--                                                        id="zipCode"-->
                                            <!--                                                        name="zipCode"-->
                                            <!--                                                        placeholder="231465"-->
                                            <!--                                                        maxlength="6"-->
                                            <!--                                                />-->
                                            <!--                                            </div>-->

                                        </div>
                                        <div class="mt-2">
                                            <% if(userDetail.status != 2 && userDetail.active  == 1) { %>
                                                <button
                                                        type="button"
                                                        class="btn btn-primary me-2"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#basicModal">
                                                    Xác minh
                                                </button>

                                                <!-- Modal -->
                                                <div class="modal fade" id="basicModal" tabindex="-1"
                                                     aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="exampleModalLabel1">Xác
                                                                    nhận</h5>
                                                                <button
                                                                        type="button"
                                                                        class="btn-close"
                                                                        data-bs-dismiss="modal"
                                                                        aria-label="Close"
                                                                ></button>
                                                            </div>
                                                            <div class="modal-body">

                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-outline-secondary"
                                                                        data-bs-dismiss="modal">
                                                                    No
                                                                </button>
                                                                <a href="/users/confirm/<%= userDetail.id %>"
                                                                   class="btn btn-primary">Yes</a>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <button
                                                        type="button"
                                                        class="btn  btn-outline-secondary"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#basicModalCancel">
                                                    Hủy
                                                </button>
                                                <!-- Modal -->
                                                <div class="modal fade" id="basicModalCancel" tabindex="-1"
                                                     aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="exampleModalLabel1">Xác
                                                                    nhận</h5>
                                                                <button
                                                                        type="button"
                                                                        class="btn-close"
                                                                        data-bs-dismiss="modal"
                                                                        aria-label="Close"
                                                                ></button>
                                                            </div>
                                                            <div class="modal-body">

                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-outline-secondary"
                                                                        data-bs-dismiss="modal">
                                                                    No
                                                                </button>
                                                                <a href="/users/lock/<%= userDetail.id %>"
                                                                   class="btn btn-primary">Yes</a>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--                                            <a href="/users/lock/<%= userDetail.id %>" class="btn btn-outline-secondary">Hủy</a>-->
                                                <button
                                                        type="button"
                                                        class="btn btn-outline-warning"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#basicModalReject">
                                                    Yêu cầu bổ sung thông tin
                                                </button>
                                                <!-- Modal -->
                                                <div class="modal fade" id="basicModalReject" tabindex="-1"
                                                     aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="exampleModalLabel1">Xác
                                                                    nhận</h5>
                                                                <button
                                                                        type="button"
                                                                        class="btn-close"
                                                                        data-bs-dismiss="modal"
                                                                        aria-label="Close"
                                                                ></button>
                                                            </div>
                                                            <div class="modal-body">

                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-outline-secondary"
                                                                        data-bs-dismiss="modal">
                                                                    No
                                                                </button>
                                                                <a href="/users/reject/<%= userDetail.id %>"
                                                                   class="btn btn-primary">Yes</a>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% } %>

                                            <!--                                            <a href="/users/reject/<%= userDetail.id %>" class="btn btn-outline-warning">Yêu cầu bổ sung thông tin</a>-->
                                        </div>
                                    </form>
                                </div>
                                <!-- /Account -->
                            </div>

                        </div>
                        <div class="col-md-12 col-lg-6 order-3 order-md-2">
                            <!-- Transactions -->
                            <div class="card h-100">
                                <div class="card-header d-flex align-items-center justify-content-between">
                                    <h5 class="card-title m-0 me-2">Lịch sử giao dịch</h5>
                                </div>
                                <div class="card-body">
                                    <ul class="p-0 m-0 striped-list">
                                        <% histories.forEach(function(item) { %>
                                            <% if(item.type == 3 && item.to_user == user.id && item.status != 2) { %>

                                            <% } else { %>
                                            <li class="d-flex mb-4 pb-1" style="cursor: pointer" onclick="historyDetail(<%=item.id%>)">
                                                <div class=" flex-shrink-0 me-3">
                                                    <!--                                                        <img src="../assets/img/icons/unicons/wallet.png" alt="User"-->
                                                    <!--                                                             class="rounded"/>-->
                                                    <% if(item.type == 1) { %>
                                                        <i class="menu-icon tf-icons bx bx-import"></i>
                                                    <% } else if(item.type == 2){ %>
                                                        <i class="menu-icon tf-icons bx bx-export"></i>
                                                    <% } else if(item.type == 3){ %>
                                                        <i class="menu-icon tf-icons bx bx-transfer-alt"></i>
                                                    <% } else if(item.type == 4){ %>
                                                        <i class="menu-icon tf-icons bx bx-id-card"></i>
                                                    <% } %>
                                                    <p>
                                                        <small> <%= item.created_date.toLocaleDateString('vi-VN') %></small>

                                                    </p>

                                                </div>

                                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">

                                                    <div class="me-2">
                                                        <h6 class="text-muted d-block mb-1"><%= item.note %></h6>

                                                        <% if(item.type == 1) { %>
                                                            <small class="badge bg-label-success rounded-pill">
                                                                Nạp tiền
                                                            </small>
                                                        <% } else if(item.type == 2){ %>
                                                            <small class="badge bg-label-warning rounded-pill">
                                                                Rút tiền
                                                            </small>

                                                        <% } else if(item.type == 3){ %>

                                                            <% if(item.to_user !== user.id) { %>
                                                                <small class="badge bg-label-secondary rounded-pill">
                                                                    Chuyển tiền
                                                                </small>
                                                            <% } else { %>
                                                                <small class="badge bg-label-primary rounded-pill">
                                                                    Nhận tiền
                                                                </small>

                                                            <% } %>

                                                        <% } else if(item.type == 4){ %>
                                                            <small class="badge bg-label-info rounded-pill">
                                                                Mua thẻ điện thoại
                                                            </small>

                                                        <% } %>
                                                        <% if(item.status == 2) { %>
                                                            <small class="badge bg-label-success rounded-pill">
                                                                Thành công
                                                            </small>
                                                        <% } else if(item.status == 0){ %>
                                                            <small class="badge bg-label-primary rounded-pill">
                                                                Chờ duyệt
                                                            </small>

                                                        <% } else if(item.status == 1){ %>
                                                            <small class="badge bg-label-danger rounded-pill">
                                                                Từ chối giao dịch
                                                            </small>

                                                        <% } %>

                                                    </div>
                                                    <div class="user-progress d-flex align-items-center gap-1">
                                                        <h6 class="mb-0 ">
                                                            <% if(item.type == 1) { %>
                                                                <i class="menu-icon tf-icons bx bx-plus"></i>
                                                                <%= item.quantity.toLocaleString('en-US') %>
                                                            <% } else if(item.type == 2){ %>
                                                                <i class="menu-icon tf-icons bx bx-minus"></i>
                                                                <%= (item.quantity + item.quantity * item.fee / 100).toLocaleString('en-US') %>
                                                            <% } else if(item.type == 3){ %>
                                                                <% if(item.to_user === user.id) { %>
                                                                    <i class="menu-icon tf-icons bx bx-plus"></i>
                                                                    <%= (item.isReceiverPayFee ? (item.quantity - item.quantity * item.fee / 100) : item.quantity).toLocaleString('en-US') %>

                                                                <% } else { %>
                                                                    <i class="menu-icon tf-icons bx bx-minus"></i>
                                                                    <%= (item.isReceiverPayFee ? item.quantity : (item.quantity + item.quantity * item.fee / 100)).toLocaleString('en-US') %>
                                                                <% } %>
                                                            <% } else if(item.type == 4){ %>
                                                                <i class="menu-icon tf-icons bx bx-minus"></i>
                                                                <%= item.quantity.toLocaleString('en-US') %>
                                                            <% } %>
                                                        </h6>
                                                        <span class="text-muted">VNĐ </span>
                                                    </div>

                                                </div>

                                            </li>
                                            <hr>
                                            <% } %>
                                        <% }) %>

                                    </ul>
                                </div>
                            </div>
                            <!--/ Transactions -->
                        </div>
                    </div>
                </div>
                <!-- / Content -->

                <!-- Footer -->
                <%- include('../commons/footer') %>
                <!-- / Footer -->

                <div class="content-backdrop fade"></div>
            </div>
            <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
    </div>

    <!-- Overlay -->
    <div class="layout-overlay layout-menu-toggle"></div>
</div>
<!-- / Layout wrapper -->


<!-- Core JS -->
<script src="/assets/vendor/libs/jquery/jquery.js"></script>
<script src="/assets/vendor/libs/popper/popper.js"></script>
<script src="/assets/vendor/js/bootstrap.js"></script>
<script src="/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>

<script src="/assets/vendor/js/menu.js"></script>

<!-- Vendors JS -->

<!-- Main JS -->
<script src="/js/main.js"></script>

<!-- Page JS -->
<script src="/assets/js/pages-account-settings-account.js"></script>

<script async defer src="https://buttons.github.io/buttons.js"></script>
</body>
</html>
